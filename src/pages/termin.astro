---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';
import JanineFace from '@assets/images/janine-aerni-face.jpg';
import CalendlyWidget from '@components/CalendlyComponent.svelte';

const pageTitle = 'Termin buchen';
const pageDescription = 'Vereinbare einen Termin für eine Hypnotherapiesitzung in Bern';
---

<BaseLayout hidePickaboo={true} title={pageTitle} description={pageDescription}>
    <article itemscope itemtype="https://schema.org/Service">
        <h1 class="mb-8" itemprop="name">Termin für Hypnosetherapie buchen</h1>
        <meta itemprop="serviceType" content="Hypnosetherapie" />
        <meta itemprop="description" content="Vereinbare einen Termin für eine Hypnotherapiesitzung in Bern mit Janine Aerni" />
        
        <div class="prose sm:prose-lg text-main" itemprop="potentialAction" itemscope itemtype="https://schema.org/ReserveAction">
            <!-- Use the Calendly widget component -->
            <CalendlyWidget client:only="svelte" />

            <div class="text-sm p-2 relative z-10">
                Bei der Terminvereinbarung werden persönliche Daten gespeichert. <a href="/datenschutzrichtlinie/">Alles über den Datenschutz</a>
            </div>

            <hr class="border-gray-400" />

            <div class="flex flex-wrap gap-4 items-center" itemprop="provider" itemscope itemtype="https://schema.org/LocalBusiness">
                <Image
                    width={112}
                    src={JanineFace}
                    class="w-32 h-32 object-cover object-center rounded-full shadow-lg"
                    alt="Janine Aerni"
                    widths={[112, 224]}
                    sizes="112px"
                    itemprop="image"
                />
                <address class="text-main not-italic" itemprop="address" itemscope itemtype="https://schema.org/PostalAddress">
                    <span itemprop="name" class="sr-only">Hypnosetherapie Bern – Janine Aerni</span>
                    <span itemprop="streetAddress">Eigerstrasse 56</span> – <span itemprop="postalCode">3007</span> <span itemprop="addressLocality">Bern</span> | <a href="/kontakt/#plan">Plan</a>
                    <br />
                    E-Mail: <a href="mailto:janine@bern-hypnose.ch" itemprop="email">janine@bern-hypnose.ch</a>
                    <br />
                </address>
            </div>
        </div>
    </article>
</BaseLayout>
