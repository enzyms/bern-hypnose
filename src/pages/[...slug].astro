---
import { type CollectionEntry, getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import ArrowLeft from '../icons/ArrowLeft.astro';

export async function getStaticPaths() {
    const pages = await getCollection('pages');
    return pages.map((page) => {
        return {
            params: { slug: page.slug },
            props: { page }
        };
    });
}

type Props = { page: CollectionEntry<'pages'> };

const { page } = Astro.props;
const { title, seo, description } = page.data;
const { Content } = await page.render();
---

<BaseLayout title={title} description={description} image={seo?.image}>
    <article class="mb-16">
        <header class="mb-8 relative">
            <a class="flex items-center absolute text-red-500 hover:text-red-700 -mt-8 text-sm font-bold" href="/">
                <ArrowLeft class="w-4 h-4 fill-current" />
                <span>Home</span>
            </a>
            <h1 class="text-balance">acasc{title}</h1>
        </header>
        <div class="max-w-none prose prose-dante sm:prose-lg">
            sdfsdfsd
            <Content />
        </div>
    </article>
</BaseLayout>
